{
  "schemaVersion": 1,
  "id": "crossbowenhanced",
  "version": "${version}",
  "name": "Crossbow Enhanced",
  "description": "A fabric mod that simplifies using the vanilla crossbow",
  "authors": ["marzeq"],
  "contact": {
    "repo": "https://github.com/marzeq/crossbowenhanced"
  },
  "license": "MIT",
  "icon": "assets/crossbowenhanced/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "me.marzeq.crossbowenhanced.CrossbowEnhanced"
    ],
    "modmenu": [
      "me.marzeq.crossbowenhanced.config.ConfigScreen"
    ]
  },
  "mixins": [
    "crossbowenhanced.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}",
    "cloth-config": "*",
    "modmenu": "*"
  },
  "custom": {
    "modmenu:clientsideOnly": true
  }
}
